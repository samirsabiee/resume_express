<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">دسته بندی ها</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>خانه</a></li>
                <li>دسته بندی ها</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="email-wrapper">
                        <div class="mail-list-container">
                            <div class="mail-toolbar">
                                <div class="mail-search-bar w-50">
                                    <input type="text" class="form-control"
                                           placeholder="برای ویرایش رو ایکن مربوط به هر دسته کلیک کنید"/>
                                </div>
                                <div class="email-menu-bar">
                                    <a href="mailbox-compose.html" class="btn mr-3">ویرایش دسته بندی</a>
                                </div>
                            </div>
                            <% data.forEach(category => { %>
                                <div class="mail-box-list">
                                    <div class="mail-list-info">
                                        <div class="mail-list-title">
                                            <h5 id="<%= category.id %>"><%= category.name %></h5>
                                        </div>
                                        <div class="mail-list-title-info">
                                            <p>این دسته 10 بار استفاده شده</p>
                                        </div>
                                        <div class="mail-list-time">
                                            <span>آخرین ویرایش : 10:59 قبل از ظهر</span>
                                        </div>
                                        <ul class="mailbox-toolbar">
                                            <li class="editCategoryBtn" data-toggle="tooltip" title="ویرایش">
                                                <i class="fa fa-pencil"></i>
                                            </li>
                                            <li class="deleteCategoryBtn" data-toggle="tooltip" title="حذف">
                                                <i class="fa fa-trash-o"></i>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>